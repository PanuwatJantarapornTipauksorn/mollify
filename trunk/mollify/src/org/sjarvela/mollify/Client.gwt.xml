<module rename-to="org.sjarvela.Mollify">
	<inherits name='com.google.gwt.user.User'/>
	<inherits name="com.google.gwt.json.JSON"/>
	<inherits name="com.google.gwt.http.HTTP"/>
	<inherits name="com.google.gwt.i18n.I18N"/>
	<inherits name="com.allen_sauer.gwt.log.gwt-log-OFF" />

	<entry-point class='org.sjarvela.mollify.client.App'/>
	
	<extend-property name="log_level" values="DEBUG"/>
	
	<extend-property name="locale" values="en"/>
	<extend-property name="locale" values="de"/>
	<extend-property name="locale" values="fr"/>
	<extend-property name="locale" values="fi"/>
	<extend-property name="locale" values="pt"/>

	<set-property name="log_DivLogger" value="ENABLED" />
	<set-property name="log_FirebugLogger" value="ENABLED" />
	
	<define-property name="demo" values="true,false" /> 
	<property-provider name="demo">
		<![CDATA[
			var demo = __gwt_getMetaProperty("demo");
			if (demo == null) return "false";
			return demo; 
		]]>
	</property-provider>
	
	<replace-with class="org.sjarvela.mollify.client.service.environment.demo.DemoEnvironment">
		<when-type-is class="org.sjarvela.mollify.client.service.environment.ServiceEnvironment"/>
		<when-property-is name="demo" value="true"/>
	</replace-with>

	<replace-with class="org.sjarvela.mollify.client.service.environment.php.PhpServiceEnvironment">
		<when-type-is class="org.sjarvela.mollify.client.service.environment.ServiceEnvironment"/>
		<when-property-is name="demo" value="false"/>
	</replace-with> 
</module>
